<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="8"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/blue_semi_transparent"
        app:srcCompat="@drawable/my_favourites"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_weight="6">

        <!--Line 1-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/white"
            android:layout_weight="1"
            android:id="@+id/line1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="5"
                android:background="#ffffff"
                android:id="@+id/line1Video">




                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/videoes"
                    android:background="@color/colorOwlBlue"
                    android:layout_weight="4"
                    android:padding="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#2A45CB"
                    android:text="Videos"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="5"
                android:background="@color/colorOwlBlue"
                android:id="@+id/line1Audio">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/audio"
                    android:layout_weight="4"
                    android:background="@color/colorOwlYellow"
                    android:padding="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Audio"
                    android:textColor="@color/white"
                    android:background="#B79C02"
                    android:layout_weight="2"
                    android:textSize="20dp"
                    android:shadowColor="@color/black"
                    android:textAlignment="center"

                    />


            </LinearLayout>


        </LinearLayout>


        <!--Line 2-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            android:background="@color/white"
            android:id="@+id/line2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="5"
                android:background="#ffffff"
                android:id="@+id/line2Notepad">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/notepad"
                    android:background="@color/red"
                    android:layout_weight="4"
                    android:padding="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Notepad"
                    android:textColor="@color/white"
                    android:background="#B11D05"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:shadowColor="@color/black"
                    android:textAlignment="center"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="5"
                android:background="@color/colorOwlBlue"
                android:id="@+id/line2Paint">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/paint"
                    android:layout_weight="4"
                    android:background="@color/green"
                    android:padding="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Paint"
                    android:textColor="@color/white"
                    android:background="#117705"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:shadowColor="@color/black"
                    android:textAlignment="center"

                    />


            </LinearLayout>


        </LinearLayout>


        <!--Line 3-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            android:background="@color/white"
            android:id="@+id/line3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#ffffff"
                android:weightSum="5"
                android:id="@+id/line3Camera">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/camera"
                    android:layout_weight="4"
                    android:background="#E7316B"
                    android:padding="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Camera"
                    android:textColor="@color/white"
                    android:background="#9C0636"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:shadowColor="@color/black"
                    android:textAlignment="center"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_weight="1"
                android:background="@color/colorOwlBlue"
                android:id="@+id/line3Others">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    app:srcCompat="@drawable/others"
                    android:background="#A934D2"
                    android:padding="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Others"
                    android:textColor="@color/white"
                    android:background="#4A0761"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:shadowColor="@color/black"
                    android:textAlignment="center"

                    />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>